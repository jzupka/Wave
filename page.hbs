{{!< default}}

<div class="content-area">
    <main class="site-main container medium">
        {{#post}}
            <article class="{{post_class}} single">
                {{#if feature_image}}
                    <div class="single-media container medium">
                        {{> post-media }}
                    </div>
                {{/if}}
                {{> post-header single=true}}
                <div class="post-content kg-canvas u-text-format">
                    {{content}}

                    <div class="post-feed">
                    {{#foreach posts visibility="all"}}
                        {{> "loop"}}
                    {{/foreach}}
                    </div>
                </div>
            </article>
        {{/post}}
    </main>
</div>